<%= form_for([:site, :profile, @ad], html: { multipart: true }) do |f| %>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :category %>
        <%= f.collection_select :category_id, Category.all, :id, :description, {}, { class: "form-control" } %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-2">
      <div class="form-group">
        <%= f.label :price %>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><%= @ad.price.currency.symbol %></span>
          </div>
          <%= f.text_field :price, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :picture %> <br>
        <%= image_tag @ad.picture(:medium), class: "img-thumbnail" %>
        <%= f.file_field :picture, class: "btn" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control", rows: 10 %>
      </div>
    </div>
  </div>

  <%= submit_tag "Editar", class: "btn btn-default" %>
<% end %>
