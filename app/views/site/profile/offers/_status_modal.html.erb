<%= form_for([:site, :profile, @offer]) do %>
  <div class="modal fade" id="statusModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <!-- Modal Title -->
          <h4 class="modal-title" id="myModalLabel">Avaliar a troca</h4>
        </div>
        <!-- Modal Body -->
        <div class="modal-body">
          <div class="form-group">
            <h5>Tem certeza que deseja realizar a seguinte troca?</h5>
            
            <%= image_tag @offer.exchange.member_game.game.picture.url(:medium), class: "card-img-top img-fluid" %>
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="glyphicon glyphicon-chevron-right"></span>
            <%= image_tag @offer.member_game.game.picture.url(:medium), class: "card-img-top img-fluid" %>
          </div>
        </div>
        <div class="modal-footer">
          <%= submit_tag "Aceitar", class: "btn btn-success" %>
          <%= submit_tag "Recusar", class: "btn btn-danger" %>
        </div>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>
<% end %>