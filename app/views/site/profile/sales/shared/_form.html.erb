<%= content_for :javascripts do %>
  <%= javascript_include_tag 'site/profile/sales' %>
<% end %>

<% if @sale.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <ul>
            <% @sale.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_for([:site, :profile, @sale]) do |f| %>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%#= f.label :title %>
        <label>Meu jogo</label>
        <%= f.collection_select :member_game_id, MemberGame.all.joins(:game).merge(Game.order(:name)), :id, :game_name_with_quality, { :prompt=> 'Selecione...' }, { class: "form-control" } %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-2">
      <div class="form-group">
        <label>Preço</label>
        <div class="input-group">
          <span class="input-group-addon"><%= @sale.price.currency.symbol %></span>
          <%= f.text_field :price, class: "form-control" %>
          <span class="input-group-addon">,00</span>
        </div>
      </div>
    </div>
  </div>

  <%= submit_tag "Enviar", class: "btn btn-success" %>
  <%= link_to "Cancelar", site_profile_sales_path, class: "btn btn-danger" %>
<% end %>
