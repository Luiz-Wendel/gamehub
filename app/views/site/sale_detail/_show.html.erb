<div class="well well-sm">
    <h4>Detalhes</h4>
</div>

<div class="thumbnail">
  <div class="caption">
    <%= image_tag @sale.member_game.game.picture.url(:medium), class: "card-img-top img-fluid" %>
    
    <table class="table table-hover table-responsive">
      <tbody>
        <tr>
          <th>
            Jogo:
          </th>
          <td>
            <%= @sale.member_game.game.name %>
          </td>
        </tr>
        <tr>
          <th>
            Preço: 
          </th>
          <td>
            <%= humanized_money_with_symbol @sale.price %>
          </td>
        </tr>
        <tr>
          <th>
            Qualidade do jogo:
          </th>
          <td>
            <%= @sale.member_game.quality %>
          </td>
        </tr>
      </tbody>
    </table>
    
    <% if member_signed_in? %>
      <!-- Button trigger modal -->
      <button class="btn btn-success btn-sm" data-toggle="modal" data-target="#offerModal">
        Comprar
      </button>
    <% else %>
      <!-- Button trigger modal -->
      <%= link_to "Comprar", new_member_session_path, class: "btn btn-success" %>
      
      <h6 class="red-adv">*Para fazer uma solicitação de compra é necessário estar logado</h6>
    <% end %>

    <%#= rating_for @sale, 'quality', disable_after_rate: false, cancel: true %>
    <!--h6 class="text-muted"><%#= @sale.rates('quality').count %> Aval.</h6-->
  </div>
  <!-- /.card -->

  <div class="caption">
    <% if member_signed_in? %>
      <!-- Button trigger modal -->
      <button class="btn btn-success btn-sm" data-toggle="modal" data-target="#commentModal">
        Deixar uma mensagem
      </button>
    <% else %>
      <!-- Button trigger modal -->
      <%= link_to "Deixar uma mensagem", new_member_session_path, class: "btn btn-success" %>
      
      <h6 class="red-adv">*Para deixar uma mensagem é necessário estar logado</h6>
    <% end %>
    
    <hr>
    
    <h3>
      Mensagens do anúncio (<%= @sale.comments.count %>)
    </h3>
    
    <%= render partial: 'site/sale_detail/comments' %>
    
  </div>
  <!-- /.card -->
</div>

<%= render partial: 'site/sale_detail/comment_modal' %>
<%= render partial: 'site/sale_detail/offer_modal' %>
