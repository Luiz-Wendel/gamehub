<% @ads.each do |ad| %>
  <div class="col-lg-4 col-md-6 mb-4" style="margin-top: 20px;">
    <div class="card h-100">
      <%= image_tag ad.picture.url(:medium) %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to truncate(ad.title, length: 30), site_ad_detail_path(ad), remote: true, data: { push: :partial } %>
        </h4>
        <h5><%= humanized_money_with_symbol ad.price %></h5>
        <p class="card-text"><%= truncate(ad.description_short, length: 100) %></p>
      </div>
      <div class="card-footer readonly-star" style="padding-bottom: 5px;">
        <%= rating_for ad, "quality", disable_after_rate: true %>
      </div>
    </div>
  </div>
<% end %>

<div class="row  col-lg-12">
  <div class="text-center">
    <% unless @ads.empty? %>
      <%= paginate @ads %>
    <% end %>
  </div>
</div>