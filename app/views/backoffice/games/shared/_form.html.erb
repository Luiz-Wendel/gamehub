<div class="col-lg-6">
  <% if @game.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
          <ul>
              <% @game.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
          </ul>
      </div>
  <% end %>
  
  <div class="panel panel-default">
      <div class="panel-heading">
          <%= action %>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
          <div class="col-lg-8">
              <%= form_for([:backoffice, @game], html: { multipart: true }) do |f| %>
                <div class="row">
                  <div class="col-lg-6">
                    <div class="form-group">
                      <label>Imagem</label> <%#= f.label :picture %> <!--br-->
                      <%= image_tag @game.picture(:medium), class: "img-thumbnail" %>
                      <br>
                      <%= f.file_field :picture, class: "btn" %>
                    </div>
                  </div>
                </div>
                
                <div class="form-group">
                  <label>Nome</label> <%#= f.label :name %> <!--br-->
                  <%= f.text_field :name, class: "form-control", placeholder: "Exemplo: Crysis 3", :autocomplete => :off %>
                </div>
                
                <div class="form-group">
                  <label>Descrição</label>
                  <%= f.text_area :description, class: "form-control", rows: 5 %>
                </div>
                
                <div class="row">
                  <div class="col-lg-8">
                    <div class="form-group">
                      <%= f.label :genre %>
                      <%= f.collection_select :genre_id, Genre.all.order(:description), :id, :description, {}, { class: "form-control" } %>
                    </div>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-lg-8">
                    <div class="form-group">
                      <%= f.label :platform %>
                      <%= f.collection_select :platform_id, Platform.all, :id, :name, {}, { class: "form-control" } %>
                    </div>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-lg-4">
                    <div class="form-group">
                      <%= f.label :classification %>
                      <%= f.collection_select :classification_id, Classification.all, :id, :rating_system, {}, { class: "form-control" } %>
                    </div>
                  </div>
                </div>
  
                <button type="submit" class="btn btn-success">Salvar</button>
                <%= link_to "Cancelar", backoffice_games_path, class: "btn btn-danger" %>
              <% end %>
          </div>
          <!-- /.col-lg-8 -->
      </div>
      <!-- /.panel-body -->
  </div>
  <!-- / .panel-default -->
</div>
<!-- / .col-lg-4 -->