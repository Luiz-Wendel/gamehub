<h1 class="page-header">Plataformas</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    Lista de Plataformas
    <%= link_to new_backoffice_platform_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table-app table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Nome</th>
            <th class="th-ico">Editar</th>
            <th class="th-ico">Excluir</th>
          </tr>
        </thead>
        <tbody>
          <% @platforms.each do |platform| %>
          <tr>
            <td class="td-id"><%= platform.id %></td>
            <td><%= platform.name %></td>
            <td class="td-ico">
              <%= link_to edit_backoffice_platform_path(platform.id), class: "btn btn-primary btn-circle" do %>
                <i class="fa fa-edit"></i>
              <% end %>
            </td>
            <td class="td-ico">
              <%= link_to backoffice_platform_path(platform.id), method: :delete, class: "btn btn-danger btn-circle", data: {confirm: t('messages.confirm_with', item: platform.name)} do %>
                <i class="fa fa-times img-center"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>
<!-- panel-default -->
