<div class="col-lg-4">
  <% if @classification.errors.any? %>
      <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
          <ul>
              <% @classification.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
          </ul>
      </div>
  <% end %>
  
  <div class="panel panel-default">
      <div class="panel-heading">
          <%= action %>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
          <div class="col-lg-8">
              <%= form_for([:backoffice, @classification]) do |f| %>
                <div class="form-group">
                  <label>Classificação</label>
                  <%= f.text_field :rating_system, class: "form-control", placeholder: "Exemplo: 18+", :autocomplete => :off %>
                </div>
                <button type="submit" class="btn btn-success">Salvar</button>
                <%= link_to "Cancelar", backoffice_classifications_path, class: "btn btn-danger" %>
              <% end %>
          </div>
          <!-- /.col-lg-8 -->
      </div>
      <!-- /.panel-body -->
  </div>
  <!-- / .panel-default -->
</div>
<!-- / .col-lg-4 -->