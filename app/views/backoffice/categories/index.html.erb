<h1 class="page-header">Categorias</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        Lista de Categorias
        <%= link_to new_backoffice_category_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
            <i class="fa fa-plus"></i>
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table-app table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Descrição</th>
                        <th class="th-ico">Editar</th>
                        <th class="th-ico">Excluir</th>
                    </tr>
                </thead>
                <tbody>
                    <% @categories.each do |category| %>
                    <tr>
                        <td class="td-id"><%= category.id %></td>
                        <td><%= category.description %></td>
                        <td class="td-ico">
                            <%= link_to edit_backoffice_category_path(category.id), class: "btn btn-primary btn-circle" do %>
                                <i class="fa fa-edit"></i>
                            <% end %>
                        </td>
                        <td class="td-ico">
                            <button type="button" disabled="disabled" class="btn btn-danger btn-circle">
                                <i class="fa fa-times"></i>
                            </button>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.panel-body -->
</div>
<!-- panel-default -->
