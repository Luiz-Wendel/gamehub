<!DOCTYPE html>

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Game Hub</title>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag 'site', media: 'all' %>
    <%= stylesheet_link_tag 'site/profile', media: 'all' %>
    
    <%= yield :stylesheets %>

    <%= csrf_meta_tags %>

  </head>

  <body>
    <%= render partial: "layouts/site_shared/navigation" %> <!-- Renderiza a barra de navegação da página -->

    <div id="wrapper" class="toggled">

      <!-- Sidebar -->
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand">
            <a href="#">
              Start Bootstrap
            </a>
          </li>
          <li>
            <%= link_to "Dashboard", site_profile_dashboard_index_path %>
          </li>
          <li>
            <%= link_to "Meus anúncios", site_profile_ads_path %>
          </li>
          <li>
            <%= link_to "Novo anúncio", new_site_profile_ad_path %>
          </li>
          <li>
            <%= link_to "Meus dados", edit_site_profile_profile_member_path(current_member.id) %>
          </li>
          <li>
            <%= link_to "Adicionar jogo", new_site_profile_member_game_path %>
          </li>
          <li>
            <%= link_to "Meus jogos", site_profile_member_games_path %>
          </li>
        </ul>
      </div>
      <!-- /#sidebar-wrapper -->

      <!-- Page Content -->
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <%= yield %>
        </div>
      </div>
      <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'site' %>
    <%= javascript_include_tag 'site/profile' %>
    <%#= javascript_include_tag 'site/profile/ads' %>

    <%= yield :javascripts %>

    <%= render partial: 'layouts/shared/notifications' %>

  </body>

</html>
