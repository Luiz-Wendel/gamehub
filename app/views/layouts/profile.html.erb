<!DOCTYPE html>

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Game Hub</title>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag 'site', media: 'all' %>
    <%= stylesheet_link_tag 'site/profile', media: 'all' %>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'site' %>
    <%= javascript_include_tag 'site/profile' %>

    <%= csrf_meta_tags %>

  </head>

  <body>
    <%= render partial: "layouts/site_shared/navigation" %> <!-- Renderiza a barra de navegação da página -->

    <div id="wrapper" class="toggled">

      <!-- Sidebar -->
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand">
            <a href="#">
              Start Bootstrap
            </a>
          </li>
          <li>
            <%= link_to "Dashboard", site_profile_dashboard_index_path %>
          </li>
          <li>
            <%= link_to "Meus anúncios", site_profile_ads_path %>
          </li>
        </ul>
      </div>
      <!-- /#sidebar-wrapper -->

      <!-- Page Content -->
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <%= yield %>
        </div>
      </div>
      <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <% if notice %>
      <%= javascript_tag "$.notify('#{notice}', 'success')" %>
    <% end %>

    <% if alert %>
      <%= javascript_tag "$.notify('#{alert}', 'error')" %>
    <% end %>

  </body>

</html>
